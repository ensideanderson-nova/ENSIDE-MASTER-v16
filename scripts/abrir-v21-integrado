#!/bin/bash

# Script para abrir integra√ß√£o completa v19 + v21 com Evolution
# Uso: ./abrir-v21-integrado [url_base]
# Padr√£o: Vercel (https://evolution-rust.vercel.app)

BASE_URL="${1:-https://evolution-rust.vercel.app}"

echo "üöÄ Abrindo ENSIDE MASTER v19 + v21 de: $BASE_URL"
echo ""

# Fun√ß√£o para abrir URLs
abrir_url() {
    local url="$1"
    local nome="$2"
    echo "üì± Abrindo $nome..."
    if command -v open &> /dev/null; then
        open "$url" 2>/dev/null &
    elif command -v xdg-open &> /dev/null; then
        xdg-open "$url" 2>/dev/null &
    fi
    sleep 1
}

# Abrir interface principal v19 (cont√©m v21 integrado)
abrir_url "$BASE_URL/ENSIDE_MASTER_v19.0_INTEGRADO.html" "ENSIDE MASTER v19.0 (com v21 integrado)"

echo ""
echo "‚úÖ Sistema v19 + v21 aberto com sucesso!"
echo ""
echo "üìå Interface Principal:"
echo "   ‚Ä¢ ENSIDE MASTER v19.0: $BASE_URL/ENSIDE_MASTER_v19.0_INTEGRADO.html"
echo "     ‚îî‚îÄ Cont√©m: WhatsApp v21, Control v21, Evolution Manager"
echo ""
echo "üìå URLs diretas (se necess√°rio):"
echo "   ‚Ä¢ WhatsApp v21: $BASE_URL/enside-master-v21.html"
echo "   ‚Ä¢ Control v21: $BASE_URL/control-center-v21.html"
echo "   ‚Ä¢ Evolution Manager: $BASE_URL/evolution-manager"
echo ""
echo "üåê Ambientes:"
echo "   ‚Ä¢ Vercel (padr√£o): ./abrir-v21-integrado"
