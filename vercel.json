{
  "version": 2,
  "buildCommand": "npm run build || echo 'no build'",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "EVOLUTION_API_URL": "https://evolution-api.production.vercel.app",
    "EVOLUTION_API_KEY": "429683C4C977415CAAFCCE10F7D57E11",
    "INSTANCE_NAME": "enside_whatsapp"
  },
  "routes": [
    {
      "src": "^/api/health$",
      "dest": "api/health.js"
    },
    {
      "src": "^/api/status$",
      "dest": "api/status.js"
    },
    {
      "src": "^/health$",
      "dest": "index.js"
    },
    {
      "src": "^/status$",
      "dest": "index.js"
    },
    {
      "src": "^/api/.*",
      "dest": "index.js"
    },
    {
      "src": "^/evolution-manager$",
      "dest": "index.js"
    },
    {
      "src": "^/.*\\.html$",
      "dest": "index.js"
    },
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}