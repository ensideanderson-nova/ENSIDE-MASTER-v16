{
  "version": 2,
  "buildCommand": "npm run build || echo 'no build'",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "env": {
    "EVOLUTION_API_URL": "https://evolution-api.production.vercel.app",
    "EVOLUTION_API_KEY": "429683C4C977415CAAFCCE10F7D57E11",
    "INSTANCE_NAME": "enside_whatsapp"
  },
  "routes": [
    {
      "src": "^/status$",
      "dest": "index.js"
    },
    {
      "src": "^/instance/.*",
      "dest": "index.js"
    },
    {
      "src": "^/send-message$",
      "dest": "index.js"
    },
    {
      "src": "^/qrcode$",
      "dest": "index.js"
    },
    {
      "src": "^/webhook.*",
      "dest": "index.js"
    },
    {
      "src": "^/api/.*",
      "dest": "index.js"
    },
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/.*\\.html$",
      "dest": "/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}